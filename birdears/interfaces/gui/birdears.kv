<BirdearsScreenManager>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<InitialScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            color: 0,0,0,1
            text: 'Birdears - Functional Ear Training'
        GridLayout:
            cols: 2
            padding: 16,16,16,16
            spacing: 4
            Button:
                text: 'Melodic Interval'
                on_press: app.show_exercise('melodic')
            Button:
                text: 'Harmonic Interval'
                on_press: app.show_exercise('harmonic')
            Button:
                text: 'Melodic Dictation'
                on_press: app.show_exercise('dictation')
            Button:
                text: 'Instrumental Dictation'
                on_press: app.show_exercise('instrumental')
        Label:
            color: 0,0,0,1
            text: 'https://github.com/iacchus/birdears/'

<ExerciseScreen>:
    #ExerciseWidget:

# this is for major; for minor, copy and change the button ids accordingly
<ExerciseWidget>:
    orientation: 'vertical'
    size_hint: (1, 1)
    question: app.question
    bt0: bt0.__self__
    bt1: bt1.__self__
    bt2: bt2.__self__
    bt3: bt3.__self__
    bt4: bt4.__self__
    bt5: bt5.__self__
    bt6: bt6.__self__
    bt7: bt7.__self__
    bt8: bt8.__self__
    bt9: bt9.__self__
    bt10: bt10.__self__
    bt11: bt11.__self__
    bt12: bt12.__self__
    BoxLayout:
        id: repeat_resolve_screen
        orientation: 'horizontal'
        Button:
            text: 'Repeat'
        Button:
            text: 'Play the correct Answer'
    BoxLayout:
        id: interval_buttons
        orientation: 'vertical'
        BoxLayout:
            id: interval_chromatics
            padding: 16,28,16,4
            spacing: 4
            Label:
                size_hint: (0.5, 1)
            Button:
                id: bt1
                disabled: True
                text: 'b2'
                on_press: root.check_question(self.semitone)
            Button:
                id: bt3
                text: 'b3'
                disabled: True
                on_press: root.check_question(self.semitone)
            Label:
                size_hint: (1, 1)
            Button:
                id: bt6
                text: '#4'
                disabled: True
                on_press: root.check_question(self.semitone)
            Button:
                id: bt8
                text: 'b6'
                disabled: True
                on_press: root.check_question(self.semitone)
            Button:
                id: bt10
                text: 'b7'
                disabled: True
                on_press: root.check_question(self.semitone)
            Label:
                size_hint: (1.5, 1)
        BoxLayout:
            id: interval_scale_tones
            padding: 16,0,16,32
            spacing: 4
            Button:
                id: bt0
                text: '1'
                disabled: True
                on_press: root.check_question(self.semitone)
            Button:
                id: bt2
                text: '2'
                disabled: True
                on_press: root.check_question(self.semitone)
            Button:
                id: bt4
                text: '3'
                disabled: True
                on_press: root.check_question(self.semitone)
            Button:
                id: bt5
                text: '4'
                disabled: True
                on_press: root.check_question(self.semitone)
            Button:
                id: bt7
                text: '5'
                disabled: True
                on_press: root.check_question(self.semitone)
            Button:
                id: bt9
                text: '6'
                disabled: True
                on_press: root.check_question(self.semitone)
            Button:
                id: bt11
                text: '7'
                disabled: True
                on_press: root.check_question(self.semitone)
            Button:
                id: bt12
                text: '8'
                disabled: True
                on_press: root.check_question(self.semitone)
    BoxLayout:
        id: correct_and_incorrect
        orientation: 'horizontal'
        Label:
            markup: 'true'
            text: '[color=666666]1[/color][color=333333]/[/color][color=999999]20[/color]'
        Label:
            markup: 'true'
            text: '[color=00ff00]0+[/color] [color=ff0000]0+[/color]'
